
<div class="container">
    <div class="row">
<h1>Categories</h1>
        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
              <div class="panel-heading">
                <div class="row">
                  <div class="col col-xs-6">
                    <h3 class="panel-title">Category</h3>
                  </div>
                  <div class="col col-xs-6 text-right">
                    <%= link_to "Create New", new_category_path, class:"btn btn-sm btn-primary btn-create" %>

                  </div>
                </div>
              </div>
              <div class="panel-body">
                <table class="table table-striped table-bordered table-list">
                  <thead>
                    <tr>
                        <th><em class="fa fa-cog"></em> Settings</th>
                        <th class="hidden-xs">ID</th>
                        <th>Name</th>
                        <th>Email</th>
                    </tr>
                  </thead>
                  <tbody>
                      <% @category.each do |category|  %>
                          <tr>
                            <td align="center">

                              <%= link_to "", category_path(category), class: "btn btn-info fa fa-eye" %>
                              <%= link_to " Edit", edit_category_path(category), class: "btn btn-success fa fa-pencil" %>
                              <%= link_to "", category_path(category), :method => :delete, data:{:confirm => "Você deseja apagar está categories?"}, class:"btn btn-danger fa fa-trash-o" %>

                            </td>
                            <td class="hidden-xs"><%= category.id %></td>
                            <td><%= category.name %></td>

                          </tr>
                          <% end %>
                        </tbody>
                </table>

              </div>
              <div class="panel-footer">
                <div class="row">
                  <div class="col col-xs-4">Page 1 of 5
                  </div>
                  <div class="col col-xs-8">
                    <ul class="pagination hidden-xs pull-right">
                      <%= will_paginate @category, renderer: BootstrapPagination::Rails %>
                    </ul>
                    <ul class="pagination visible-xs pull-right">
                        <li><a href="#">«</a></li>
                        <li><a href="#">»</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>

</div></div></div>
